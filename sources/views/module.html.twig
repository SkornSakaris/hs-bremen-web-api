{% extends 'layout.html.twig' %}

{% block content %}
    <div class="well">
        <h3>Module!</h3>
    </div>
    {% if error is defined %}
        {{ error }} <br>
    {% endif %}
    {% if moduls is not defined %}
        {% if module is not defined %}
            <form class="form-horizontal" role="form" action="/module/" method="post">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="id">Id:</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="id" name="id" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="generated">Generiert:</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="generated" name="generated" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="code">Code:</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="code" name="code" placeholder="1.1">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="shortname">Kürzel <span style="color: red;">*</span> :</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="shortname" name="shortname" placeholder="MATHE1" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="longname">Bezeichnung <span style="color: red;">*</span> :</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="longname" name="longname" placeholder="Lineare Algebra" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="description">Beschreibung:</label>
                        <div class="col-sm-4">
                            <textarea class="form-control" id="description" name="description" placeholder="Die Beschreibung des Moduls"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="semester">Semester <span style="color: red;">*</span> :</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" id="semester" name="semester" placeholder="2" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="ects">ECTS:</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" id="ects" name="ects" placeholder="6">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="conditions">Vorraussetzung:</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="conditions" name="conditions" placeholder="-">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="lecturer">Dozent:</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="lecturer" name="lecturer" placeholder="Prof. Dr. Mustermann">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="attempt">Versuch:</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" id="attempt" name="attempt" placeholder="1">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="grade">Note:</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" id="grade" name="grade" placeholder="4,0">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-1 col-sm-10">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        {% else %}
            <form class="form-horizontal" role="form">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="id">Id:</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="id" name="id" value="{{ module.id }}" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="generated">Generiert:</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="generated" name="generated" value="{{ module.generated }}" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="code">Code:</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="code" name="code" value="{{ module.code }}" placeholder="1.1">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="shortname">Kürzel <span style="color: red;">*</span> :</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="shortname" name="shortname" value="{{ module.shortname }}" placeholder="MATHE1" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="longname">Bezeichnung <span style="color: red;">*</span> :</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="longname" name="longname" value="{{ module.longname }}" placeholder="Lineare Algebra" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="description">Beschreibung:</label>
                        <div class="col-sm-4">
                            <textarea class="form-control" id="description" name="description" placeholder="Die Beschreibung des Moduls">{{ module.description }}</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="semester">Semester <span style="color: red;">*</span> :</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" id="semester" name="semester" value="{{ module.semester }}" placeholder="2" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="ects">ECTS:</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" id="ects" name="ects" value="{{ module.ects }}" placeholder="6">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="conditions">Vorraussetzung:</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="conditions" name="conditions" value="{{ module.conditions }}" placeholder="-">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="lecturer">Dozent:</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="lecturer" name="lecturer" value="{{ module.lecturer }}" placeholder="Prof. Dr. Mustermann">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="attempt">Versuch:</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" id="attempt" name="attempt" value="{{ module.attempt }}" placeholder="1">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="grade">Note:</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" id="grade" name="grade" value="{{ module.grade }}" placeholder="4,0">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-1 col-sm-10">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        {% endif %}
    {% else %}
        <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
            {% for spalte in 1..moduls|length+1 %}
                <th>Semester {{ spalte }}</th>
            {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for zeile in 0..4 %}
                <tr>
                {% for spalte in 1..moduls|length %}
                    <td>
                        {% if moduls[spalte][zeile] is defined %}
                            <div>
                                <label>Id: </label><a href="{{ moduls[spalte][zeile].id }}"> {{ moduls[spalte][zeile].id }}</a><br>
                                <label>Code: </label> {{ moduls[spalte][zeile].code }} <br>
                                <label>Kürzel: </label> {{ moduls[spalte][zeile].shortname }} <br>
                                <label>Semester: </label> {{ moduls[spalte][zeile].semester }} <br>
                                <label>Dozent: </label> {{ moduls[spalte][zeile].lecturer }} <br>
                                <label>Versuch: </label> {{ moduls[spalte][zeile].attempt }} <br>
                                <label>Note: </label> {{ moduls[spalte][zeile].grade }} <br>
                            </div>
                        {% endif %}
                    </td>
                {% endfor %}
                    <td><a href="/newmodule"><span class="glyphicon glyphicon-plus"></span> Modul</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
    {% endif %}
    </div>
{% endblock %}